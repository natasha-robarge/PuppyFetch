      <input type="text" name="breed" class ="navItem" value="" placeholder="Breed"> -->
      <button class="navItem button searchButton" type="button" onclick="location.href='/search/'+ $('#location').val()">Search</button>
  </nav>

  <div class='appendDiv'>
      <div class="detail">
        <% for(var i = 0; i < animals.length; i++) { %>
            <!-- <p class="petDetails"> -->
              <div class="detailcontainer">
                <h3>
                  <%= animals[i].animal.name %>
                </h3>
                <h5>
                  Gender: <%= animals[i].animal.sex %>
                </h5>
                <h5>
                  Age: <%= animals[i].animal.age %>
                </h5>
                <h5>
                  Contact: <%= animals[i].animal.contact.email %>
                </h5>
                <h5>
                  <%= animals[i].animal.description %>
                </h5>
                <img src='<%= photos[i] %>' class='photos'>
              </div>
          <!-- </p> -->
        <% } %>
      </div>
    </div>

